{% extends 'base.html.twig' %}

{% block title %}Cursos{% endblock %}

{% block body %}
    <h1>Cursos</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ curso.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ curso.nombre }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ curso.descripcion }}</td>
            </tr>
            <tr>
                <th>Fecha_inicio</th>
                <td>{{ curso.fechaInicio ? curso.fechaInicio|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Fecha_fin</th>
                <td>{{ curso.fechaFin ? curso.fechaFin|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_cursos_index') }}">Regresar</a>

    <a href="{{ path('app_cursos_edit', {'id': curso.id}) }}">Editar</a>

    {{ include('cursos/_delete_form.html.twig') }}
{% endblock %}
